{
  "description": {
    "type": "textarea"
  },
  "exhibitText": {
    "type": "textarea"
  },
  "exhibitImage": {
    "type": "img"
  },
  "exhibitLink": {
    "type": "url",
    "validation": {
      "pattern": "^(https?://)?([0-9a-z.-]+).([a-z.]{2,6})([/[0-9][a-z].-]*)*/?$"
    }
  },
  "awards": [{
    "src": {
      "type": "img",
      "default": "http://placehold.it/350x350"
    },
    "url": {
      "type": "url",
      "default": "http://example.com"
    }
  }]
}
