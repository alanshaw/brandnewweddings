aside#strip-exhibit.strip
  .container
    h1.text-uppercase.text-xs-center=facts.exhibitTitle
    .row
      .col-md-offset-2.col-md-4.col-lg-offset-3.col-lg-3
        a(href=facts.exhibitLink target="_blank")
          if facts.exhibitImage[0] === '/'
            img.img-fluid(src='#{meta.relativePathToRoot}/#{facts.exhibitImage}')
          else
            img.img-fluid(src=facts.exhibitImage)
      .col-md-5
        p.lead=facts.exhibitText
