include ../icon
include ../header

doctype html
html(lang='en')
  head
    include ../head
    title=content.pageTitle
  body.page-about
    +header('about')
    main
      section.strip
        .container
          .row.row-mosaic.m-b-2
            .col-md-6
              img.img-fluid(src='#{content.image1}-/format/jpeg/-/scale_crop/1920x1920/center/-/quality/lightest/')
            .col-md-6
              .row.row-mosaic
                .col-xs-6
                  img.img-fluid(src='#{content.image2}-/format/jpeg/-/scale_crop/510x510/center/-/quality/lightest/')
                  img.img-fluid(src='#{content.image3}-/format/jpeg/-/scale_crop/510x510/center/-/quality/lightest/')
                .col-xs-6
                  img.img-fluid(src='#{content.image4}-/format/jpeg/-/scale_crop/510x510/center/-/quality/lightest/')
                  img.img-fluid(src='#{content.image5}-/format/jpeg/-/scale_crop/510x510/center/-/quality/lightest/')
          .row
            .col-lg-4
              h1.h2.text-accent=content.title1
              !=md.render(content.text1)
            .col-lg-8
              h1.h2.text-accent=content.title2
              !=md.render(content.text2)
    include ../social
    include ../exhibit
    include ../awards
    include ../footer
    include ../bundle.svg
    script(src='#{meta.relativePathToRoot}/bundle.js')
